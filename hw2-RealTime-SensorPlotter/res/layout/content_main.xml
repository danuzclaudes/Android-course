<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heading"
        android:id="@+id/text_heading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensorChooserText"
        android:layout_marginTop="50dp"
        android:id="@+id/text_sensorChooser"
        android:layout_below="@+id/text_heading"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Accelerometer"
        android:id="@+id/btn_accelerometer"
        android:tag="Accelerometer"
        android:onClick="onClickSensor"
        android:layout_below="@+id/text_sensorChooser"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/status_accelerometer"
        android:layout_below="@+id/btn_accelerometer"
        android:layout_alignParentStart="true"
        android:lines="4"
        android:maxLines="4" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Proximity"
        android:id="@+id/btn_proximity"
        android:tag="Proximity"
        android:onClick="onClickSensor"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/status_proximity"
        android:layout_below="@+id/btn_proximity"
        android:layout_alignParentStart="true"
        android:lines="4"
        android:maxLines="4" />
</RelativeLayout>
